@page "/search"
@using BlazorAutoPulse.ViewModel
@inject RechercheViewModel VM
@inject NavigationManager Navigation
@using System.Web

<PageTitle>Recherche - AutoPulse</PageTitle>

<section class="search-results-header">
    <div class="container">
        <h1>Résultats de recherche</h1>
        <BarreDeRechercheAvecFiltresComposant VM="@VM" IsHomePage="false" />
    </div>
</section>

<div class="container">
    @if (VM.IsLoading)
    {
        <div class="loading">
            <div class="loader"></div>
            <p>Chargement des résultats...</p>
        </div>
    }
    else if (VM.FilteredAnnonces != null && VM.FilteredAnnonces.Any())
    {
        <div class="results-info">
            <h2>@VM.TotalResults résultat(s) trouvé(s)</h2>
            <p class="pagination-info">@VM.PaginationInfo</p>
        </div>
        
        <div class="cars-grid">
            @foreach (var a in VM.FilteredAnnonces)
            {
                <AnnonceComposant Annonce="@a" />
            }
        </div>

        @if (VM.ShowPagination)
        {
            var paginationData = VM.GetPaginationData();
            
            <div class="pagination">
                <button class="pagination-btn" 
                        @onclick="VM.GoToPreviousPage" 
                        disabled="@(!paginationData.CanGoToPrevious)">
                    ← Précédent
                </button>

                @if (paginationData.ShowFirstPage)
                {
                    <button class="pagination-btn" @onclick="() => VM.GoToPage(1)">1</button>
                    
                    @if (paginationData.ShowFirstDots)
                    {
                        <span class="pagination-dots">...</span>
                    }
                }

                @foreach (var pageNumber in paginationData.VisiblePages)
{
    var isCurrentPage = pageNumber == paginationData.CurrentPage;
    <button class="pagination-btn @(isCurrentPage ? "active" : "")" 
            @onclick="() => VM.GoToPage(pageNumber)">
        @pageNumber
    </button>
}

                @if (paginationData.ShowLastPage)
                {
                    @if (paginationData.ShowLastDots)
                    {
                        <span class="pagination-dots">...</span>
                    }
                    <button class="pagination-btn" 
                            @onclick="() => VM.GoToPage(paginationData.TotalPages)">
                        @paginationData.TotalPages
                    </button>
                }

                <button class="pagination-btn" 
                        @onclick="VM.GoToNextPage" 
                        disabled="@(!paginationData.CanGoToNext)">
                    Suivant →
                </button>
            </div>
        }
    }
    else
    {
        <div class="no-results">
            <h2>Aucun résultat trouvé</h2>
            <p>Essayez de modifier vos critères de recherche ou <a href="/">retournez à l'accueil</a> pour voir toutes nos annonces.</p>
        </div>
    }
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await VM.InitializeAsync(StateHasChanged);

        var uri = new Uri(Navigation.Uri);
        var query = HttpUtility.ParseQueryString(uri.Query);

        VM.SelectedMarque = query["marque"] ?? "0";
        VM.SelectedModele = query["modele"] ?? "";
        VM.SelectedCarburant = query["carburant"] ?? "0";
        VM.SelectedCategorie = query["categorie"] ?? "0";
        VM.Nom = query["nom"] ?? "";
        VM.Departement = query["departement"] ?? "";

        if (int.TryParse(query["prixmin"], out var prixMinParsed))
            VM.PrixMinValue = prixMinParsed;

        if (int.TryParse(query["prixmax"], out var prixMaxParsed))
            VM.PrixMaxValue = prixMaxParsed;

        if (int.TryParse(query["kmmin"], out var kmMinParsed))
            VM.KmMinValue = kmMinParsed;

        if (int.TryParse(query["kmmax"], out var kmMaxParsed))
            VM.KmMaxValue = kmMaxParsed;

        if (VM.SelectedMarque != "0")
        {
            await VM.OnMarqueChanged(new Microsoft.AspNetCore.Components.ChangeEventArgs
            {
                Value = VM.SelectedMarque
            });
        }

        await VM.EffectuerRecherche();
    }
}