@page "/connexion"
@using BlazorAutoPulse.ViewModel
@inject ConnexionViewModel VM

<div id="login" class="page">
    <div class="auth-container">
        <div class="auth-box">
            <h2>Connexion</h2>
            <form>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="votre@email.com" @bind="VM.emailUtilisateur" required>
                </div>
                <div class="form-group">
                    <label>Mot de passe</label>
                    <input type="password" placeholder="••••••••" @bind="VM.motDePasseUtilisateur" required>
                </div>
                <button type="button" class="btn-submit" @onclick="VM.ConnexionUtilisateur">
                    Se connecter
                </button>
            </form>
            <div class="auth-switch">
                Pas encore de compte ? <a onclick="showPage('register')">S'inscrire</a>
            </div>
        </div>
    </div>
</div>
@if (VM.User != null)
{
    <div class="card">
        <h4>Token :</h4>
        <p class="token">@VM.User</p>

        <h4>Informations :</h4>
        <ul>
            <li><strong>Pseudo :</strong> @VM.User.Pseudo</li>
            <li><strong>Nom :</strong> @VM.User.Nom</li>
            <li><strong>Prénom :</strong> @VM.User.Prenom</li>
            <li><strong>Email :</strong> @VM.User.Email</li>
        </ul>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await VM.InitializeAsync(StateHasChanged);
    }
}