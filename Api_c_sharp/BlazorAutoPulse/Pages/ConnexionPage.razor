@page "/connexion"
@using BlazorAutoPulse.ViewModel
@inject ConnexionViewModel VM
@inject NavigationManager nav

<div id="login" class="page">
    <div class="auth-container">
        <div class="auth-box">
            <h2>Connexion</h2>

            @if (!string.IsNullOrEmpty(VM.messageErreur))
            {
                <div class="error-message-box">
                    @VM.messageErreur
                </div>
            }

            <!-- Formulaire classique -->
            <form>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email"
                           placeholder="votre@email.com"
                           @bind="VM.emailUtilisateur"
                           disabled="@VM.isLoading"
                           required>
                </div>
                <div class="form-group">
                    <label>Mot de passe</label>
                    <input type="password"
                           placeholder="••••••••"
                           @bind="VM.motDePasseUtilisateur"
                           disabled="@VM.isLoading"
                           required>
                </div>
                <button type="button"
                        class="btn-submit"
                        @onclick="VM.ConnexionUtilisateur"
                        disabled="@VM.isLoading">
                    @if (VM.isLoading)
                    {
                        <span>Connexion en cours...</span>
                    }
                    else
                    {
                        <span>Se connecter</span>
                    }
                </button>
            </form>

            <!-- ✨ NOUVEAU : Séparateur -->
            <div class="separator">
                <span>OU</span>
            </div>

            <!-- ✨ NOUVEAU : Bouton Google -->
            <button type="button"
                    class="btn-google"
                    @onclick="VM.ConnecterAvecGoogle"
                    disabled="@VM.isLoading">
                <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google logo" />
                <span>Continuer avec Google</span>
            </button>

            <div class="auth-switch">
                <div>Pas encore de compte ? <a href="creationcompte">S'inscrire</a></div>
                <a href="oublimdp">Mot de passe oublié?</a>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        VM.Reset();
        await VM.InitializeAsync(StateHasChanged, nav);
    }
}