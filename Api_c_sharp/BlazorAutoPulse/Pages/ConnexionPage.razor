@page "/connexion"
@using BlazorAutoPulse.ViewModel
@inject ConnexionViewModel VM
@inject NavigationManager nav

<div id="login" class="page">
    <div class="auth-container">
        <div class="auth-box">
            <h2>Connexion</h2>
            <form>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="votre@email.com" @bind="VM.emailUtilisateur" required>
                </div>
                <div class="form-group">
                    <label>Mot de passe</label>
                    <input type="password" placeholder="••••••••" @bind="VM.motDePasseUtilisateur" required>
                </div>
                <button type="button" class="btn-submit" @onclick="VM.ConnexionUtilisateur">
                    Se connecter
                </button>
            </form>
            <div class="auth-switch">
                Pas encore de compte ? <a href="creationcompte">S'inscrire</a>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        VM.Reset();
        await VM.InitializeAsync(StateHasChanged, nav);
    }
}