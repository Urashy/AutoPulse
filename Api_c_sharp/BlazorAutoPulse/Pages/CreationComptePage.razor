@page "/creationcompte"
@using BlazorAutoPulse.ViewModel
@inject CreationCompteViewModel VM
@inject NavigationManager nav

<div class="popup-overlay" style="@(VM.showPopUp ? "display: flex" : "display: none")">
    <div class="popup">
        <h2>Votre compte a été créé</h2>
        <p>Vous serez redirigé vers la page de connexion dans <strong>@VM.seconds</strong> secondes.</p>
    </div>
</div>

<div class="auth-container">
    <div class="auth-box">
        <h2>Inscription</h2>

        <!-- ✨ NOUVEAU : Bouton Google en HAUT -->
        <button type="button" 
                class="btn-google" 
                @onclick="VM.ConnecterAvecGoogle">
            <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google logo" />
            <span>S'inscrire avec Google</span>
        </button>

        <!-- ✨ NOUVEAU : Séparateur -->
        <div class="separator">
            <span>OU</span>
        </div>

        @if (VM.compte != null)
        {
            <form>
                <div class="form-group">
                    <label>Prénom</label>
                    <input type="text" placeholder="Jean" @bind="VM.compte.Prenom" required>
                </div>
                <div class="form-group">
                    <label>Nom</label>
                    <input type="text" placeholder="Dupont" @bind="VM.compte.Nom" required>
                </div>
                <div class="form-group">
                    <label>Pseudo</label>
                    <input type="text" placeholder="XXX" @bind="VM.compte.Pseudo" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="votre@email.com" @bind="VM.compte.Email" required>
                </div>
                <div class="form-group" style="@((VM.memeMotDePasse) ? "" : "background-color: red;")">
                    <label>Mot de passe</label>
                    <input type="password" placeholder="••••••••" @bind="VM.compte.MotDePasse" required>
                </div>
                <div class="form-group" style="@((VM.memeMotDePasse) ? "" : "background-color:red;")">
                    <label>Confirmer le mot de passe</label>
                    <input type="password" placeholder="••••••••" @bind="VM.motDePasse" required>
                </div>
                <div class="form-group">
                    <label>Date de naissance</label>
                    <input type="date" @bind="VM.compte.DateNaissance" required>
                </div>
                <div class="form-group">
                    <label>Biographie</label>
                    <input type="text" placeholder="XXXXXX" @bind="VM.compte.Biographie">
                </div>
                <div class="form-group" style="display: flex; align-items: center;">
                    <input @onchange="VM.ReloadPage" type="checkbox" id="is-pro-checkbox">
                    <label for="is-pro-checkbox" style="margin-bottom: 0; cursor: pointer;">
                        Je suis un professionnel
                    </label>
                </div>

                @if (VM.pro)
                {
                    <div class="form-group">
                        <label>Numéro de SIRET</label>
                        <input type="text" placeholder="123 456 789 00010" @bind="VM.compte.NumeroSiret">
                    </div>
                    <div class="form-group">
                        <label>Raison sociale</label>
                        <input type="text" placeholder="Google" @bind="VM.compte.RaisonSociale">
                    </div>
                }

                <button type="button" @onclick="VM.CreateCompteAsync" class="btn-submit">S'inscrire</button>

                @if (VM.messageErreur != null)
                {
                    <label class="error-message">@VM.messageErreur</label>
                }
            </form>
        }

        <div class="auth-switch">
            Déjà un compte ? <a href="connexion">Se connecter</a>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await VM.InitializeAsync(StateHasChanged, nav);
    }
}