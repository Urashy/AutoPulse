@page "/search"
@using BlazorAutoPulse.ViewModel
@inject RechercheViewModel VM
@inject NavigationManager Navigation
@using System.Web

<PageTitle>Recherche - AutoPulse</PageTitle>

<section class="search-results-header">
    <div class="container">
        <h1>Résultats de recherche</h1>
        
        <div class="search-bar">
            <select value="@VM.SelectedMarque" @onchange="OnMarqueChanged">
                <option value="0">Marque</option>
                @if (VM.AllMarques != null)
                {
                    @foreach (var marque in VM.AllMarques)
                    {
                        <option value="@marque.IdMarque">@marque.LibelleMarque</option>
                    }
                }
            </select>
            <select @bind="VM.SelectedModele">
                <option value="">Modèle</option>
                @if (VM.FilteredModeles != null)
                {
                    @foreach (var modele in VM.FilteredModeles)
                    {
                        <option value="@modele.IdModele">@modele.LibelleModele</option>
                    }
                }
            </select>
            <input type="text" @bind="VM.PrixMax" placeholder="Prix max">
            <button @onclick="RechercherVoitures">Rechercher</button>
            <button @onclick="ReinitialiserRecherche" class="btn-secondary">Réinitialiser</button>
        </div>

        @if (VM.HasActiveFilters())
        {
            <div class="active-filters">
                <span>Filtres actifs :</span>
                @if (VM.SelectedMarque != "0")
                {
                    <span class="filter-tag">Marque: @VM.GetMarqueLibelle(VM.SelectedMarque)</span>
                }
                @if (!string.IsNullOrEmpty(VM.SelectedModele))
                {
                    <span class="filter-tag">Modèle: @VM.GetModeleLibelle(VM.SelectedModele)</span>
                }
                @if (!string.IsNullOrEmpty(VM.PrixMax))
                {
                    <span class="filter-tag">Prix max: @VM.PrixMax €</span>
                }
            </div>
        }
    </div>
</section>

<div class="container">
    @if (VM.IsLoading)
    {
        <div class="loading">
            <p>Chargement des résultats...</p>
        </div>
    }
    else if (VM.FilteredAnnonces != null && VM.FilteredAnnonces.Any())
    {
        <div class="results-info">
            <h2>@VM.FilteredAnnonces.Length résultat(s) trouvé(s)</h2>
        </div>
        <div class="cars-grid">
            @foreach (var a in VM.FilteredAnnonces)
            {
                <AnnonceComposant Annonce="@a" />
            }
        </div>
    }
    else
    {
        <div class="no-results">
            <h2>Aucun résultat trouvé</h2>
            <p>Essayez de modifier vos critères de recherche ou <a href="/">retournez à l'accueil</a> pour voir toutes nos annonces.</p>
        </div>
    }
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await VM.InitializeAsync(StateHasChanged);
        
        // Récupère les query parameters depuis l'URL
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        
        var marque = query["marque"];
        var modele = query["modele"];
        var prix = query["prix"];

        //await VM.InitializeWithParams(marque, modele, prix);
    }

    private async Task OnMarqueChanged(ChangeEventArgs e)
    {
        await VM.OnMarqueChanged(e);
    }

    private async Task RechercherVoitures()
    {
        var queryString = VM.BuildQueryString();
        Navigation.NavigateTo($"/search{queryString}", forceLoad: true);
    }

    private void ReinitialiserRecherche()
    {
        Navigation.NavigateTo("/");
    }
}